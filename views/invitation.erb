<h1 class="title_event_show"><%= @event.title %></h1>
<p class="description_txt">Description of event:</p>
<section id="description_event_section">
	<h2 class="description_event_show"><%= @event.description %></h2>
</section>
<p class="date_txt">Event Date:</p>
<%= @event.date %>
<form action="/confirm/invitation/<%= params[:code] %>" method='post'>
	<input type="hidden" name="_method" value="put">
	<p>Are you going?</p>
	<input type="radio" name="answer" value="Yes">Yes 
	<input type="radio" name="answer" value="No">No
	<input type='submit' value='Answer'>
</form>